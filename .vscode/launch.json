{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "RuleServer",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildRuleServer",
            "program": "${workspaceFolder}/src/RuleServer/bin/Debug/net5.0/RuleServer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/RuleServer",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\\\bNow listening on:\\\\s+(https?://\\\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "RuleWeb",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildRuleWeb",
            "program": "${workspaceFolder}/src/RuleWeb/bin/Debug/net5.0/RuleWeb.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/RuleWeb",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\\\bNow listening on:\\\\s+(https?://\\\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
    ],
    "compounds": [
        {
            "name": "Compound",
            "configurations": [
                "RuleServer",
                "RuleWeb"
            ]
        }
    ]
}